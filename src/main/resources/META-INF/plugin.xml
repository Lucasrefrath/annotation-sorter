<idea-plugin>
    <id>de.lucas.annotation.core</id>
    <name>Annotation Sorter</name>
    <vendor>Lucas Hermes</vendor>

    <description><![CDATA[
    Sort all your Annotations with one shortcut or just when using 'Reformat code'.
  ]]></description>

    <!-- Product and plugin compatibility requirements. -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <!-- Extension points defined by the plugin. -->
    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable
                displayName="Annotation Sorting"
                instance="de.lucas.annotation.core.settings.presentation.AnnotationSortingAppSettingsConfigurable"
        />
    </extensions>

    <actions>
        <action id="SortClassAnnotations"
                class="de.lucas.annotation.core.actions.SortClassAnnotationsAction"
                text="Sort Annotations"
                description="Sorts all class annotations by their length">
            <!-- Windows/Linux: Ctrl+Alt+S -->
            <keyboard-shortcut first-keystroke="ctrl alt S" keymap="$default"/>

            <!-- macOS: Cmd+Alt+S -->
            <keyboard-shortcut first-keystroke="meta alt S" keymap="Mac OS X"/>
        </action>
    </actions>
</idea-plugin>